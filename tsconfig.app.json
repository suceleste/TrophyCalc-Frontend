// tsconfig.app.json

{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    // ... autres options

    // CORRECTION 1 : Inclure les typages Node et les typages Vue (via Vite)
    "types": ["node", "vite/client"], 
    
    // CORRECTION 2 : S'assurer que le système de résolution des modules est moderne
    "moduleResolution": "node",
    "module": "ESNext",
    "target": "ESNext",
    
    // CORRECTION 3 : Permettre les imports par défaut pour les librairies JS comme Axios/Vue
    "allowSyntheticDefaultImports": true, 
    "esModuleInterop": true, 
    
    // ... autres options
  },

  "baseUrl": ".", // Indique que les chemins de base partent d'ici
  "paths": {
    "@/*": ["./src/*"] // Définit que "@/*" signifie "./src/*"
  },
  
  // NOTE IMPORTANTE : Assurez-vous que l'inclusion de fichiers se fait correctement
  "include": [
    "src/**/*.ts", 
    "src/**/*.tsx", 
    "src/**/*.vue" // VÉRIFIEZ ABSOLUMENT QUE CECI EST PRÉSENT
  ]
}